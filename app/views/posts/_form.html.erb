<div class="container mt-5 ml-5">
  <%= form_with(model: @post, local: true, url: choose_new_or_edit) do |f| %>
    <div class="row justify-content-md-center">
      <div class="col-7 mt-3 mr-5">
        <%= render 'shared/errors', obj: @post %>
        <div class="card text-center">
          <div class="card-header bg-grey text-center font-weight-bold my-font-size">
            <p><%= post %></p>
          </div>

          <div class="card-body" style="height: 15rem;">
            <p class="card-text text-center">
              <%= f.text_area :caption, autofocus: true,
              class: "form-control", placeholder: "Write a caption..." %>
            </p>
            <p class="card-text text-center">
              <%= f.file_field :picture %>
              <%= f.hidden_field :picture_cache %>
            </p>
          </div>

          <div class="card-footer">
            <p>
              <%= f.submit "#{name}", class: "btn btn-primary btn-block" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
