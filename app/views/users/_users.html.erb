<div class="container col-8">
  <h1 class="ml-5 mt-3 mb-2">Instagramers</h1>
  <% @users.each do |user| %>
    <div class="row col-8">
      <div class="col-8 mt-3">
        <div class="card text-center shadow-sm p-3">
          <div class="card-header bg-white text-center text-primary font-weight-bold">
            <%= link_to user.username, user, class: "my-text" %>
            <div class="text-center mt-3">
              <%= image_tag(user.profile.url, size: "90", class: "rounded-circle") if user.profile? %>
            </div>
            <p class="card-text text-center mt-4">
              <% if user.posts.count == 1 %>
                <%= "#{user.posts.count} post" %>
              <% else %>
                <%= "#{user.posts.count} posts" %>
              <% end %>
            </p>
          </div>
          <div class="card-body">
            <%= link_to 'View Profile', user, class: "btn btn-outline-info px-4 m-2" %>
            <% if logged_in? && user == current_user %>
              <%= link_to 'Edit Profile', edit_user_path(user),
                class: "btn btn-outline-primary px-4" %>
            <% end %>
          </div>
          <div class="card-footer text-muted bg-white">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
